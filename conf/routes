# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.FrontController.index()

GET     /loginForm                  controllers.LoginController.loginForm()

POST    /login                      controllers.LoginController.login()

GET     /loadItems                  controllers.FrontController.loadItems()

+nocsrf
POST    /saveData                   controllers.FrontController.saveData()

+nocsrf
POST    /update                     controllers.FrontController.updateStatus()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
